- content_for :pagetitle do
  %h1 Game: #{@game.name}
- content_for :itembar do
  = link_to 'Edit', edit_game_path(@game), class: 'btn btn-default' if policy(@game).edit?
  = link_to 'Back', games_path, class: 'btn btn-default' if policy(@game).index?

.row
  .col-sm-6
    .panel.panel-default
      .panel-heading
        %h3.panel-title Details
      .panel-body
        %p
          %strong Name:
          = @game.name
        %p
          %strong Notes:
          = @game.notes
        %p
          %strong Time:
          = @game.time
        %p
          %strong Location:
          = @game.location
  .col-sm-6
    .panel.panel-info
      .panel-heading
        %h3.panel-title Score
      .panel-body
        %p
          %strong Captain:
          = @team.name
        %p
          %strong Manager:
          = @team.name
        %p
          %strong Starters:
          = @team.starters.pluck(:name).to_sentence
        %p
          %strong Alternates:
          = @team.alternates.pluck(:name).to_sentence

.panel.panel-success
  .panel-heading
    %h2.panel-title Teams
  .panel-body
