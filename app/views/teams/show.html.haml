- content_for :pagetitle do
  %h1 Team: #{@team.name}
- content_for :itembar do
  = link_to 'Edit', edit_team_path(@team), class: 'btn btn-default' if policy(@team).edit?
  = link_to 'Back', teams_path, class: 'btn btn-default' if policy(@team).index?

.row
  .col-sm-6
    .panel.panel-default
      .panel-heading
        %h3.panel-title Details
      .panel-body
        %p
          %strong Name:
          = @team.name
        %p
          %strong Description:
          = @team.description
        %p
          %strong Location:
          = @team.location

%hr
.row
  .col-md-6
    .panel.panel-success
      .panel-heading
        %h2.panel-title Games
      .panel-body
        %h3 Upcoming
        %table.table.table-striped
          %thead
            %tr
              %th Name
              %th Time
              %th Location
          %tbody
        %hr
        %h3 Complete
        %table.table.table-striped
          %thead
            %tr
              %th Name
              %th Time
              %th Location
          %tbody
  .col-md-6
    .panel.panel-info
      .panel-heading
        .row
          .col-xs-6
            %h3.panel-title Roster
          .col-xs-6.text-right
            = link_to fa_icon('edit lg'), edit_roster_team_path(@team) if policy(@team).edit_roster?
      .panel-body
        %p
          %strong Captain:
          %ul
            %li= link_to @team.captain.try(:display_name), profile_user_path(@team.captain)
        %p
          %strong Starters:
          %ul
            - @team.starters.each do |t|
              %li= link_to t.display_name, profile_user_path(t)
        %p
          %strong Alternates:
          %ul
            - @team.alternates.each do |t|
              %li= link_to t.display_name, profile_user_path(t)
