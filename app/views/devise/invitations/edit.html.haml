.row
  .col-md-6.col-md-offset-3
    .panel.panel-default
      .panel-heading
        %h2.panel-title= t 'devise.invitations.edit.header'
      .panel-body
        = bootstrap_form_for resource, as: resource_name, url: invitation_path(resource_name), html: {method: :put} do |f|
          =# devise_error_messages!
          = f.hidden_field :invitation_token
          - if f.object.class.require_password_on_accepting
            = f.text_field :first_name
            = f.text_field :last_name
            = f.text_field :username
            = f.password_field :password
            = f.password_field :password_confirmation
          = f.form_group do
            = f.submit t("devise.invitations.edit.submit_button"), class: 'btn btn-block btn-primary'
