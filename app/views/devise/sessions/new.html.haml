.row
  .col-md-offset-4.col-md-4
    .panel.panel-default
      .panel-heading
        %h1.panel-title Sign in
      .panel-body
        = bootstrap_form_for(resource, as: resource_name, url: session_path(resource_name), html: { role: 'form'}) do |f|
          = f.text_field :email, autofocus: true, append: fa_icon('user'), hide_label: true, placeholder: 'Email'
          = f.password_field :password, append: fa_icon('lock'), hide_label: true, placeholder: 'Password' if devise_mapping.recoverable?
          = f.check_box :remember_me if devise_mapping.rememberable?
          = f.submit 'Sign in', class: 'btn btn-success btn-block'
        .row{style: 'padding-top: 10px;'}
          .col-sm-6
            = link_to 'Sign up', new_registration_path(resource_name) if devise_mapping.registerable?
          .col-sm-6.text-right
            = link_to "Forgot password?", new_password_path(resource_name) if devise_mapping.recoverable?
